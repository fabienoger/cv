<main class="container login">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="align-center">Connexion</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label :email, class: "control-label", for: "email" %>
          <%= f.email_field :email, autofocus: true, id: "email", class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: "control-label", for: "password" %>
          <%= f.password_field :password, autocomplete: "off", id: "password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Connexion", class: "btn btn-flat btn-info" %>
        </div>
      <% end %>

    </div>
  </div>
</main>
