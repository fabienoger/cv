<main class="container reset-password">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="align-center">Mot de passe oubli√© ?</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field form-group form-group-material-indigo-700">
            <%= f.label :email, class: "control-label", for: "email" %>
            <%= f.email_field :email, autofocus: true, class: "form-control", id: "email" %>
          </div>

          <div class="actions">
            <%= f.submit "Envoyez-moi les instructions", class: "btn btn-flat btn-info" %>
            <a href="/users/sign_in" class="pull-right">Connexion</a>
          </div>
        <% end %>
    </div>
  </div>
</main>
