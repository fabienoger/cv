<main class="container portfolio">
  <h1 class="align-center">Portfolio</h1>
  <div class="row">
    <div class="col-md-4">
      <div class="thumbnail">
        <img src="/assets/capture_fabienoger.com.png">
        <div class="caption">
          <h2>fabienoger.com</h2>
          <ul>
            <li><img src="/assets/ror_logo.png" width="20px" height="20px">&nbsp; Ruby On Rails</li>
            <li><img src="/assets/boostrap_logo.svg" width="20px" height="20px">&nbsp; Bootstrap</li>
          </ul>
          <a href="http://www.fabienoger.com" class="btn btn-flat btn-info">Site &nbsp; <i class="fa fa-arrow-right"></i></a>
        </div>
      </div>
    </div>
    <% @projects.each do |project| %>
      <% @links = ProjectTechnology.where(:project_id => project.id) %>
      <div class="col-md-4">
        <div class="thumbnail">
          <img src="/assets/capture_fabienoger.com.png">
          <div class="caption">
            <h2><%= project.title %></h2>
            <ul>
              <li><img src="/assets/ror_logo.png" width="20px" height="20px">&nbsp; Ruby On Rails</li>
              <li><img src="/assets/boostrap_logo.svg" width="20px" height="20px">&nbsp; Bootstrap</li>
              <% @links.each do |link| %>
                <% technology = Technology.find(link.technology_id) %>
                <li><%= image_tag technology.picture.url(:thumb), size: "20" %><span><%= technology.name %></span></li>
              <% end %>
            </ul>
            <a href="<%= project.url %>" target="_blank" class="btn btn-flat btn-info">Site &nbsp; <i class="fa fa-arrow-right"></i></a>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-md-4">
    </div>
  </div>
</main>
