<main class="container project">
  <div class="row show">
    <div class="col-md-6 col-xs-12">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @project.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @project.description %>
      </p>

      <p>
        <strong>Github:</strong>
        <%= @project.github %>
      </p>

      <p>
        <strong>Twitter:</strong>
        <%= @project.twitter %>
      </p>

      <p>
        <strong>Url:</strong>
        <%= @project.url %>
      </p>

      <p>
        <strong>Startdate:</strong>
        <%= @project.startdate %>
      </p>

      <p>
        <strong>Enddate:</strong>
        <%= @project.enddate %>
      </p>

      <p>
        <strong>Abstract:</strong>
        <%= @project.abstract %>
      </p>
    </div>
    <div class="col-md-6 col-xs-12">
      <% @technologies.each do |technology| %>
        <p><%= technology.name %></p>
      <% end %>
      <%= image_tag @project.picture.url(:medium) %>
    </div>

    <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-raised btn-info" %> |
    <%= link_to 'Back', projects_path, class: "btn btn-raised btn-danger" %>
  </div>
</main>
