<main class="container project">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h1>Listing Projects</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Github</th>
          <th>Twitter</th>
          <th>Url</th>
          <th>Startdate</th>
          <th>Enddate</th>
          <th>Abstract</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.description %></td>
            <td><%= project.github %></td>
            <td><%= project.twitter %></td>
            <td><%= project.url %></td>
            <td><%= project.startdate %></td>
            <td><%= project.enddate %></td>
            <td><%= project.abstract %></td>
            <td><%= link_to 'Show', project %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Project', new_project_path, class: "btn btn-raised btn-success" %>
  </div>
</main>
